<cheprooPlusPlusInputFile name="cheproo_input">

	<cheprooPlusPlus name="simulation1">
		<function name="speciateWaters" isSecOrdDerivCalc="false" writeInfo="false">
			<ref type = "chemicalComposition" ID="1">water1</ref>					
			<ref type = "chemicalComposition" ID="1">water2</ref>					
		</function>	
	</cheprooPlusPlus>
	
	<globalChemicalSystem buildOption="readFromMasterTemp" thermodynamicDatabase="mastertemp.xml">

		<phase name="aqueous1" type="aqueousIdeal" model="aqueous"> 
			<ref type="species">ca+2</ref>
			<ref type="species">so4-2</ref>
		</phase>
		<phase name="mineral1" type="mineralPure" model="mineral"> 
			<ref type="species">gypsum</ref>
		</phase>		
		
		<localChemicalSystems>
			<localChemicalSystem name="local1" type="localChemicalSystemConstPrimary" maxRelativeError="1e-5" maxResidual="1e-10" maxIterNum="100"/>
		</localChemicalSystems>
		
	</globalChemicalSystem>
	
	<proostList type="chemicalComposition">	
	
		<chemicalComposition ID="1" name="water1" temp="25.00">
		
			<ref type="firstGuess" cGuess="0.0012" primarySpecies="ca+2"/>	
			<ref type="firstGuess" cGuess="0.02" primarySpecies="so4-2"/>			
			
			<ref type="constraint" iCon="eqmin" name="gypsum"/>
			<ref type="constraint" iCon="cTot" value="0.001" name="ca+2" std="1.0e-8"/>
			
			<ref type="phaseContent" name="aqueous1" model="aqueous" value="0.1"/>
			<ref type="phaseContent" name="mineral1" model="mineral" value="0.1"/>
			
		</chemicalComposition>
		
		<chemicalComposition ID="2" name="water2" temp="25.00">
		
			<ref type="firstGuess" cGuess="0.0012" primarySpecies="ca+2"/>	
			<ref type="firstGuess" cGuess="0.02" primarySpecies="so4-2"/>			
			
			<ref type="constraint" iCon="eqmin" name="gypsum"/>
			<ref type="constraint" iCon="cTot" value="0.001" name="ca+2" std="1.0e-8"/>
			<ref type="constraint" iCon="cTot" value="0.03293821" name="so4-2" std="1.0e-8"/>
			
			<ref type="phaseContent" name="aqueous1" model="aqueous" value="0.1"/>
			<ref type="phaseContent" name="mineral1" model="mineral" value="0.1"/>
			
		</chemicalComposition>		
		
	 </proostList>

</cheprooPlusPlusInputFile>