<cheprooPlusPlusInputFile name="cheproo_input">

	<cheprooPlusPlus name="simulation1">
		<function name="speciateWatersRedInfos" isSecOrdDerivCalc="false" writeInfo="false">
			<ref type = "water" ID="1">water1</ref>	
		</function>	
	</cheprooPlusPlus>
	
	<globalChemicalSystem buildOption="readFromMaster25" thermodynamicDatabase="completemaster25.xml">

		<phase name="aqueous1" type="aqueousDebyeHuckel" model="aqueous"> 
			<ref type="species">hco3-</ref>
			<ref type="species">so4-2</ref>			
			<ref type="species">oh-</ref>
			<ref type="species">h+</ref>
			<ref type="species">co3-2</ref>
			<ref type="species">ca+2</ref>
			<ref type="species">h2o</ref>
		</phase>
		<phase name="mineral1" type="mineralPure" model="mineral"> 
			<ref type="species">caso4(s)</ref>
		</phase>
		<phase name="mineral2" type="mineralPure" model="mineral"> 
			<ref type="species">caco3(s)</ref>
		</phase>
		<phase name="gas1" type="gasIdeal" model="gas"> 
			<ref type="species">co2(g)</ref>
		</phase>		
 		<localChemicalSystems >
			<localChemicalSystem name="local1" type="localChemicalSystemSaaltink" maxRelativeError="1e-5" maxResidual="1e-10" maxIterNum="100"/>
		</localChemicalSystems>

	</globalChemicalSystem>
	
	<proostList type = "water">	
		<water ID="1" name="water1" temp="25.00"> 
		
			<ref type="firstGuess" cGuess="4.0e-5" primaryspecies = "hco3-"/>
			<ref type="firstGuess" cGuess="4.0e-5" primaryspecies = "so4-2"/>
			<ref type="firstGuess" cGuess="4.0e-5" primaryspecies = "oh-"/>
			<ref type="firstGuess" cGuess="4.0e-5" primaryspecies = "h+"/>
			<ref type="firstGuess" cGuess="4.0e-5" primaryspecies = "co3-2"/>
		
			<ref type="constraint" icon="cTot" value="85" name="hco3-" std="0.01"/>
			<ref type="constraint" icon="chgbal" value="" name="" std="0.015"/>
			<ref type="constraint" icon="ec" value="705" name="" std="0.02"/>
			<ref type="constraint" icon="activity"  value="1.0e-8" name="h+" std="0.001"/>
			<ref type="constraint" icon="eqmin" value="" name="caco3(s)" std="0.013"/>
			<ref type="constraint" icon="eqgas" value="1.0e-7" name="co2(g)" std="0.016"/>

			<ref type="constraint" iCon="eqmin"  value="" name="caso4(s)" refSpecies="ca+2"/>
			
			<ref type="phasecontent"  name="aqueous1" value="0.1"/>
			<ref type="phasecontent"  name="mineral1" value="0.1"/>
			<ref type="phasecontent"  name="mineral2" value="0.0"/>

		</water>
	 </proostList>

</cheprooPlusPlusInputFile>