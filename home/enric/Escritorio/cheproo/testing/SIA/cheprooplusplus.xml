<cheprooPlusPlusInputFile name="cheproo_input">

	<cheprooPlusPlus name="simulation1">
		<function name="speciateInitial" isSecOrdDerivCalc="false" writeInfo="false">
			<ref type = "chemicalComposition" ID="1">water1</ref>	
			<ref type = "chemicalComposition" ID="1">water2</ref>	
			<ref type = "chemicalComposition" ID="1">water3</ref>	
		</function>	
	</cheprooPlusPlus>
	
	<globalChemicalSystem buildOption="readFromMasterTemp" thermodynamicDatabase="mastertemp.xml">

		<phase name="aqueous1" type="aqueousDebyeHuckel" model="aqueous"> 
			<ref type="species">br-</ref>
		</phase>
		
		<localChemicalSystems>
			<localChemicalSystem name="local1" type="localChemicalSystemConstPrimary" maxRelativeError="1e-9" maxResidual="1e-11" maxIterNum="100"/>
		</localChemicalSystems>
		
	</globalChemicalSystem>
	
	<proostList type="chemicalComposition">
	
		<chemicalComposition ID="1" name="water1" temp="25.00">  <!--agua 1-->
			<ref type="firstGuess" cGuess="0.0001" primarySpecies="br-"/>
			<ref type="constraint" iCon="cTot" value="0.0001" name="br-"/>
			<ref type="phaseContent" name="aqueous1" model="aqueous" value="1.0"/>		
		</chemicalComposition>

		<chemicalComposition ID="2" name="water2" temp="25.00">  <!--agua 2-->
			<ref type="firstGuess" cGuess="0.00001" primarySpecies="br-"/>
			<ref type="constraint" iCon="cTot" value="0.00001" name="br-"/>
			<ref type="phaseContent" name="aqueous1" model="aqueous" value="1.0"/>	
		</chemicalComposition>
		
		<chemicalComposition ID="3" name="water3" temp="25.00">  <!--agua 3-->	
			<ref type="firstGuess" cGuess="0.001" primarySpecies="br-"/>
			<ref type="constraint" iCon="cTot" value="0.001" name="br-"/>		
			<ref type="phaseContent" name="aqueous1" model="aqueous" value="1.0"/>	
		</chemicalComposition>	
		
	 </proostList>

</cheprooPlusPlusInputFile>