cmake_minimum_required (VERSION 2.8.6)
project (KratosChemist)


SET ( ChemistLib /home/enric/kratos/applications/flowtransport_application/external/Chemist)
        
FILE(GLOB chemist ${ChemistLib})

ADD_LIBRARY (LibChemist2 SHARED ${chemist})

IF (NOT ChemistLib)
   message ("Not Found ChemistLib")
ENDIF ()

CC=gcc
   CFLAGS=-Wall -ggdb -fPIC
   LDFLAGS=-fPIC -shared

   libfich.so: LibChemist.o
      $(CC) $(LDFLAGS) -o $@ $^
